# Environment variables for ScoutPulse Backend
# Copy this file to .env and update the values

# Database Configuration
DATABASE_URL=sqlite:///./scoutpulse.db
# For production with PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost/scoutpulse

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# AI Service Configuration
# Twelve Labs API - Get your API key from https://twelvelabs.io/
TWELVE_LABS_API_KEY=your_twelve_labs_api_key_here
TWELVE_LABS_INDEX_ID=  # Optional: Will be auto-created as 'scoutpulse-soccer' if not provided

# IBM watsonx Configuration
IBM_WATSONX_API_KEY=your_ibm_watsonx_api_key_here
IBM_WATSONX_BASE_URL=https://us-south.ml.cloud.ibm.com

# SoccerNet Dataset Configuration
SOCCERNET_DATA_PATH=/path/to/soccernet/dataset

# File Storage Configuration
STATIC_FILES_PATH=./static
VIDEO_UPLOAD_PATH=./static/videos
THUMBNAIL_UPLOAD_PATH=./static/thumbnails

# Security Configuration
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/scoutpulse.log
